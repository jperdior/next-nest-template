{
  "name": "testproject",
  "version": "1.0.0",
  "private": true,
  "description": "Module-based monorepo template with NestJS, Next.js, and Docker",
  "scripts": {
    "dev": "make start",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "codegen": "make codegen"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "openapi-typescript": "^7.4.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "modules/**/backend/**/*.ts": [
      "eslint --fix --max-warnings=0",
      "jest --bail --findRelatedTests"
    ],
    "modules/**/frontend/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "jest --bail --findRelatedTests"
    ],
    "shared/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
